  <script src="../../js/catalog_data.js"></script>
  <script src="../../js/cart.js"></script>
  <script src="../../js/activation_codes.js"></script>
  <script>
    (function () {
      var id = "528_flow_hoodie";
      var list = window.EnTrusCatalog || [];
      var found = null;
      for (var i = 0; i < list.length; i++) {
        if (list[i].id === id) { found = list[i]; break; }
      }
      var btn = document.getElementById("ea-detail-add");
      if (!btn || !found || !window.EnTrusCart) return;
      btn.addEventListener("click", function () {
        window.EnTrusCart.add({
          id:   found.id,
          name: found.name,
          price: found.price
        });
      });
    })();
  </script>
