  <script src="../../js/bracelets_data.js"></script>
  <script src="../../js/cart.js"></script>
  <script>
    (function () {
      var id = "transfusion";
      var list = window.EnTrusBracelets || [];
      var found = null;
      for (var i = 0; i < list.length; i++) {
        if (list[i].id === id) {
          found = list[i];
          break;
        }
      }
      var btn = document.getElementById("ea-detail-add");
      if (!btn || !found || !window.EnTrusCart) return;
      btn.addEventListener("click", function () {
        window.EnTrusCart.add(found);
      });
    })();
  </script>
