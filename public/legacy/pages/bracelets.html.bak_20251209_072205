  <script src="../js/bracelets_data.js"></script>
  <script src="../js/cart.js"></script>
  <script>
    (function () {
      var list = window.EnTrusBracelets || [];
      if (!window.EnTrusCart) return;
      var buttons = document.querySelectorAll('.bracelet-actions button[data-id]');
      buttons.forEach(function (btn) {
        btn.addEventListener('click', function () {
          var id = btn.getAttribute('data-id');
          var found = null;
          for (var i = 0; i < list.length; i++) {
            if (list[i].id === id) { found = list[i]; break; }
          }
          if (!found) return;
          window.EnTrusCart.add(found);
        });
      });
    })();
  </script>
